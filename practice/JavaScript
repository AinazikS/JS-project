let moreFruits = 'apple';
console.log(moreFruits.indexOf('l'));
console.log(moreFruits.slice(0, 2));
console.log(moreFruits.length);
console.log(moreFruits.replace('pp', 2));
console.log(moreFruits.toUpperCase());
console.log(moreFruits.charAt(3));
console.log(moreFruits[3]);
console.log(moreFruits.split('')); //split by a characters
console.log(moreFruits.split(',')); // split by comma







//Array

let fruits = ['banana', 'apple', 'orange', 'pineapples'];
fruits = new Array('banana', 'apple', 'orange', 'pineapples');
fruits[0] = 'pear';

console.log(fruits);

// alert(fruits); //access value at index 2nd

for (let i = 0; i < fruits.length; i++) {
    console.log(fruits[i]);
}

// array common methods
console.log('to string', fruits.toString());
console.log(fruits.join(' - '));
console.log(fruits.pop(), fruits); //removes the last item
console.log(fruits.push('blackberries'), fruits) // appends
fruits[fruits.length] = 'new fruit';
console.log(fruits);

fruits.shift(); //removes the 1st element from an array
console.log(fruits);
fruits.unshift('pineapple'); //adds the 1st element to an array
console.log(fruits);

let vegetables = ['potato', 'tomato', 'cucumber', 'broccoli'];
let addArrays = fruits.concat(vegetables);
console.log(addArrays);
console.log(addArrays.slice(1, 3));
console.log(addArrays.reverse());
console.log(addArrays.sort());

let nums = [1, 2, 456, 78, 34, 213, 75];
console.log(nums.sort(function (a, b) { return a - b; }));
console.log(nums.sort(function (a, b) { return a + b; }));



