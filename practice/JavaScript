for (let num = 0; num <= 5; num++) {
    emptyArray.push('hello');
}
console.log(emptyArray);



//objects in Js
//dictionaries in Python

let obj = {
    one: 'ho',
    two: 'ney',
    number: 34,
    studentInfo: function () {
        return this.one + '\n' + this.two + "\n" + this.number;
    }
};
// console.log(obj.one);
// console.log(obj.two);
obj.one = 'Mo'; // change value
// console.log(obj.one);
// console.log(obj.two);

// obj.number++;
// console.log(obj.number);
console.log(obj.studentInfo());


